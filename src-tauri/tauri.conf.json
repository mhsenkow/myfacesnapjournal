{
  "$schema": "https://tauri.app/v2/schema.json",
  "identifier": "com.myface.snapjournal",
  "productName": "MyFace SnapJournal",
  "version": "0.1.2",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "MyFace SnapJournal",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": true,
        "closable": true,
        "minimizable": true,
        "maximizable": true,
        "url": "index.html"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "deb", "msi", "appimage"],
    "resources": [],
    "externalBin": [],
    "copyright": "Copyright Â© 2024 MyFace SnapJournal",
    "category": "Productivity",
    "shortDescription": "AI-Powered Personal Journal with Social Integration",
    "longDescription": "A modern, feature-rich journaling application that combines personal reflection with social media integration. Built with a stunning glass morphism UI, multiple themes, and powerful features including Mastodon feed browsing and AI companionship."
  }
}
