# MyFace SnapJournal - Environment Variables
# Copy this file to .env and fill in your values

# Mastodon Configuration (Optional)
# If you want to use a specific Mastodon instance for development
MASTODON_INSTANCE_URL=https://mastodon.social
MASTODON_CLIENT_ID=your_client_id_here
MASTODON_CLIENT_SECRET=your_client_secret_here

# Facebook Configuration (Optional)
# For Facebook integration features
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# GitHub Configuration (Required for feedback system)
# Create a Personal Access Token at https://github.com/settings/tokens
# with 'repo' scope to create issues in private repositories
# or 'public_repo' scope for public repositories
GITHUB_TOKEN=your_github_token_here

# AI Configuration (Optional)
# For AI companion and echo engine features
OLLAMA_BASE_URL=http://localhost:11434
AI_MODEL_NAME=llama2

# Development Configuration
NODE_ENV=development
VITE_APP_TITLE=MyFace SnapJournal
VITE_APP_VERSION=0.1.0

# Database Configuration
DATABASE_URL=sqlite:./data/journal.db

# Feature Flags
ENABLE_AI_COMPANION=true
ENABLE_ECHO_ENGINE=true
ENABLE_FACEBOOK_INTEGRATION=false
ENABLE_METRICS=false

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
